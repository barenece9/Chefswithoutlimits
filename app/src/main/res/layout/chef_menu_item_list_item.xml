<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:weightSum="10"
        android:background="#ffffff"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="#cccccc"
            android:scaleType="fitXY"
            android:id="@+id/img_item"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Veg"
                android:textSize="14sp"
                android:id="@+id/menu_item_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Veg"
                android:textSize="13sp"
                android:id="@+id/menu_item_category"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Veg"
                android:textSize="13sp"
                android:id="@+id/menu_item_description"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Veg"
                    android:layout_marginRight="5dp"
                    android:textSize="13sp"
                    android:id="@+id/menu_item_price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Veg"
                    android:textSize="13sp"
                    android:id="@+id/menu_item_amd"/>
            </LinearLayout>


        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/edit"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:id="@+id/btn_list_edit"/>

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/delit"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_list_delete"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
