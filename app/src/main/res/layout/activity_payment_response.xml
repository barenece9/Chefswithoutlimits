<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@mipmap/inner_bg"
    android:orientation="vertical">

    <!-- <TextView android:id="@+id/payment_form_title"
               android:text="@string/addPayment"
               style="@style/Header.Light" />-->
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_item" />



    <!--<Button
        android:id="@+id/saverx"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:text="@string/saverx"
        />

    <Button
        android:id="@+id/saveWithService"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:text="@string/saveService"
        />-->

    <!-- <TextView android:id="@+id/token_list_title"
               android:text="@string/paymentMethods"
               android:layout_marginTop="12dp"
               style="@style/Header.Light" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/emailverification" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="THANK YOU"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="ORDER CONFIRMED"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#5BCE14" />

        <TextView
            android:id="@+id/tv_order_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FCB817" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="If you are satisfied with your service use the stars to submit a rating"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:progressTint="#FFCA33"
            android:layout_gravity="center">

            <requestFocus />
        </RatingBar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/verify_myaccount"
                android:paddingLeft="10dp"
                android:text="Submit"
                android:textColor="#A81D20"
                android:textSize="12sp" />

            />

        </FrameLayout>



    </LinearLayout>



</LinearLayout>
