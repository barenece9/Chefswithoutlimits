                        android:id="@+id/item_details"/>
                </LinearLayout>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <EditText
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:gravity="center"
                        android:hint="enter the code"
                        android:background="@mipmap/login_txtfld"
                        android:layout_marginRight="5dp"
                        android:textSize="15sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/etn_code"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:background="#96B100"
                        android:gravity="center"
                        android:text="Check"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/etn_code"
                        android:layout_toEndOf="@+id/etn_code"
                        android:textColor="#ffffff"
                        android:id="@+id/tn_check"/>


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:background="#96B100"
                        android:layout_marginLeft="0dp"
                        android:text="Invoice"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/item_details"
                        android:layout_toStartOf="@+id/item_details"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                        android:id="@+id/item_details_bill"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:background="#96B100"
                        android:layout_marginLeft="0dp"
                        android:text="Details"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                        android:id="@+id/item_details"/>
                </RelativeLayout>


            </LinearLayout>

            <!--<TextView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:layout_gravity="end"
                android:background="#ffffff"
                android:layout_marginLeft="0dp"
                android:text="Details"
                android:textSize="15sp" />-->

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

