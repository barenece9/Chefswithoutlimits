<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/inner_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="5dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/chef_dashboard_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_marginBottom="15dp"
            android:weightSum="100" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|right|center"
                    android:background="@mipmap/logo_box" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:paddingLeft="5dp" >

                <Button
                    android:id="@+id/imgChDashOn"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/chef_dashon"
                    android:text="ON" />

                <Button
                    android:id="@+id/imgChDashOff"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgChDashOn"
                    android:background="@drawable/chef_dashoff"
                    android:text="OFF" />

                <!--android:layout_toRightOf="@+id/imgChDashOn"-->

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@mipmap/new_order" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="20"
                        android:textColor="#96B100"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:text="NEW ORDER"
                        android:textColor="#A57D1F"
                        android:textSize="7sp" />

                </FrameLayout>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:background="@mipmap/login_txtfld"
            android:hint="Enter menu name"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:id="@+id/etn_menu_name"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etn_menu_name"
            android:id="@+id/spinner_category"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:textSize="15sp"
            android:background="@mipmap/login_txtfld">
        </Spinner>


        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:text="Will Menu Item have Multiple Options?"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/spinner_category"
            android:id="@+id/checkbox_multiple_option"/>

        <RadioGroup
            android:id="@+id/pricing_option"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            android:layout_below="@+id/checkbox_multiple_option">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pricing Option"
                android:paddingLeft="2dp"
                android:textColor="#000000"/>

            <RadioButton
                android:id="@+id/radio_Priced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priced" />

            <RadioButton
                android:id="@+id/radio_non_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Priced" />

        </RadioGroup>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:text="Base Price?"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/pricing_option"
            android:id="@+id/checkbox_base_price"/>

        <EditText
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:paddingLeft="5dp"
           android:layout_below="@+id/checkbox_base_price"
           android:background="@mipmap/login_txtfld"
           android:hint="Enter menu description"
           android:layout_marginBottom="5dp"
            android:textSize="15sp"
           android:id="@+id/etn_menu_desc"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/etn_menu_desc"
            android:background="@mipmap/login_txtfld"
            android:layout_marginBottom="5dp"
            android:hint="Enter menu Regular Price"
            android:inputType="numberDecimal"
            android:textSize="15sp"
            android:id="@+id/etn_menu_regular_price"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/etn_menu_regular_price"
            android:background="@mipmap/login_txtfld"
            android:hint="Enter menu Sale Price /Offer Price"
            android:inputType="numberDecimal"
            android:textSize="15sp"
            android:id="@+id/etn_menu_sales_price"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etn_menu_sales_price"
            android:id="@+id/spinner_available"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:background="@mipmap/login_txtfld">
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/spinner_available"
            android:background="@mipmap/login_txtfld"
            android:hint="Total no of menu stock"
            android:inputType="number"
            android:textSize="15sp"
            android:id="@+id/etn_menu_max_quantity_available"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/LinearLayout11"
            android:layout_below="@+id/etn_menu_max_quantity_available"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#326745"
                android:scaleType="fitXY"
                android:id="@+id/img_take"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Picture (Optional)"
                android:background="#96B100"
                android:gravity="center"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_brouse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/LinearLayout11"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="#DC3B3B"
                android:id="@+id/btn_close"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:background="#96B100"
                android:id="@+id/btn_add"/>
        </LinearLayout>






    </RelativeLayout>
    </ScrollView>



</LinearLayout>