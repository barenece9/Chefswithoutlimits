<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangel_dialog">

        <TextView
            android:id="@+id/tv_order_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:text="Order Details"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_order_details"
            android:background="#cccccc"/>

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_details"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Order Date &amp; Time :"/>

            <TextView
                android:id="@+id/tv_date_value"
                android:layout_below="@+id/tv_menu_name"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_date"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Order Type :"/>

            <TextView
                android:id="@+id/tv_order_type_value"
                android:layout_below="@+id/tv_menu_name"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_transport_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_order_type"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_transport_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Transport Type :"/>

            <TextView
                android:id="@+id/tv_transport_type_value"
                android:layout_below="@+id/tv_menu_name"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_customer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_transport_type"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Customer Details :"/>

            <TextView
                android:id="@+id/tv_customer_details_value"
                android:layout_below="@+id/tv_menu_name"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_customer_details"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Phone :"/>

            <TextView
                android:id="@+id/tv_phone_value"
                android:layout_below="@+id/tv_menu_name"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_phone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_details_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Order Details :" />

            <TextView
                android:id="@+id/tv_order_details_list_value"
                android:layout_below="@+id/tv_menu_name"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
               />

        </LinearLayout>





        <Button
            android:id="@+id/btn_cross"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_close_light"/>
    </RelativeLayout>

    </ScrollView>

</LinearLayout>
