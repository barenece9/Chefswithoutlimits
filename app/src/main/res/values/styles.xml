<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GreenButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#FF9800</item>
        <item name="colorButtonNormal">#96B100</item>
    </style>

    <style name="RedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#FF9800</item>
        <item name="colorButtonNormal">#A61E22</item>
    </style>

    <style name="YellowButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#FF9800</item>
        <item name="colorButtonNormal">#FCB817</item>
    </style>

</resources>
